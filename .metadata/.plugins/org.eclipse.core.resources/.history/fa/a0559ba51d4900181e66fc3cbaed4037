package SA2;

public class Wochentag {
    private int tag;

    public Wochentag() { 
        this.tag = 0;
    }

    public void setTag(int i) throws KeinTagException {
        if(i < 0 || i > 6)
            throw new KeinTagException;
    }

    public int getTag() { ... }

    public void naechsterTag() { 
            this.tag++;
        }

    public void vorhergehenderTag() { 
            this.tag--;
    }

    public String toString() { ... }
}


