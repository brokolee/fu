package SA1;

public class PrintableList implements Printable {
    private Entry header = new Entry(null, null, null);
    private int size = 0 ;
    
    public PrintableList() {
    header.next = header;
    header.previous = header;
    }
    

    static private class Entry {
        private Printable element;
        private Entry next;
        private Entry previous;
        
        private Entry(Printable element, Entry next, Entry previous ) {
            this.element = element;
            this.next = next;
            this.previous = previous; 
        }
        
    }
    
    /* Adds a new Entry to the front of the List*/
    public void add(Printable printable) {
        Entry newEntry = new Entry(printable, header, header.previous);
        header.previous.next = newEntry;
        header.previous = newEntry;
        size++;
    }
    
    private class ListIterator {
        Entry helper = new Entry(null, null, null);
        
        public ListIterator listIterator() {
            return new ListIterator();
        }
        
        void iterate() throws IllegalArgumentException {
            helper = header;
            if (helper.previous == header || helper.previous == null) {
                throw new IllegalArgumentException("keine Liste!");
            }
            helper = helper.previous;
            helper.element.print();
            for (int i = 0; i < size; i++) {
                helper.element.print();
                helper = helper.previous;
                
                
            }
        }
    }

    public void print() {
    }

}
