package EA2;

class BinaryNode {
    private BinaryNode leftSon, rightSon;
    private int value;

    public BinaryNode(int v) {
        value = v;
    }

    public boolean contains(int v) {
        System.out.println("///////");
       System.out.println(this.value);
        if (v == this.value) {
            System.out.println("TRUE");
            return true;
        
            
        }
           
        
        if (v > this.value)
            this.rightSon.contains(v);
        
        if(this.rightSon != null) {
        if (v < this.value)

            this.leftSon.contains(v);
        }
       
        return false;
    }

    public void insert(int v) {
        if (v == this.value)
            System.out.println("DUPLICATE!");
        if (v < this.value) {
            if (this.leftSon == null) {
                this.leftSon = new BinaryNode(v);
     
            } else {
                this.leftSon.insert(v);
            }
        }

        if (v > this.value) {
            if (this.rightSon == null) {
                this.rightSon = new BinaryNode(v);
     
            } else {
                this.rightSon.insert(v);
            }
        }
    }

    public void inorder() {
        if (leftSon != null)
            leftSon.inorder();


        if (rightSon != null)
            rightSon.inorder();

    }
}
